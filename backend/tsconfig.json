{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": [
            "es2017"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}